<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/AFrameLayoutWrapper" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/swipe_item_height"
        android:layout_gravity="center_horizontal"
        android:id="@+id/BFrameLayout"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/layout_padding_b_frame_layout_top">

        <com.lorentzos.flingswipe.SwipeFlingAdapterView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/frame"
            app:rotation_degrees="10"
            app:max_visible="4"
            app:min_adapter_stack="6" />

    </FrameLayout>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_frame"
        android:layout_margin="@dimen/layout_padding_content_frame"
        android:visibility="invisible"/>

</FrameLayout>
