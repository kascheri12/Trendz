<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trendzcatalog.trendz.activities.LaundryActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/trendzPrimary">
        <ImageView
            android:layout_width="@dimen/title_image_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/margin_top_title_dashboard"
            android:id="@+id/titleImageDashboardFragment"
            android:background="@color/trendzPrimary"
            android:src="@drawable/main_logo_1080w"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayoutLaundryFragment">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="90dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_laundry_basket_01"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_clean_01"/>
    </FrameLayout>
</FrameLayout>
